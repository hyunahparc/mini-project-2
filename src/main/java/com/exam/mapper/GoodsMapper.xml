<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<!-- Mapper 생성 후에는 꼭 Configuration에 등록해준다 -->
<!-- 인터페이스 이름과 동일하게 -->
<mapper namespace="com.exam.mapper.GoodsMapper">
 
 	<!-- 상품 목록 -->
  	<select id="goodsList" parameterType="string" resultType="GoodsDTO">
  		select gCode,
  			   gCategory,
  			   gName,
  			   gContent,
  			   gPrice,
  			   gImage
  		from goods
  		where gCategory = #{gCategory}
  	</select>
  	
  	<!-- 상품 자세히 보기 -->
  	<select id="goodsRetrieve" parameterType="string" resultType="GoodsDTO">
  		select gCode,
  			   gCategory,
  			   gName,
  			   gContent,
  			   gPrice,
  			   gImage
  		from goods
  		where gCode = #{gCode}
  	</select>
   
</mapper>


